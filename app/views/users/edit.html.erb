<div class="main users-edit">
  <div class="container">
    <div class="form-heading">アカウント編集</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
    
        <%= form_with model: @user, local: true do |f| %>
          <p>ユーザー名</p>
          <%= f.text_field :name %>
          <p>画像</p>
          <%= f.file_field :image %> 
          <p>メールアドレス</p>
          <%= f.email_field :email %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>