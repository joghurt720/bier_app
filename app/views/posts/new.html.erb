<div class="new-post-main">
  <div class="container">
    <div class="post-width">
      <div class="post-title">
        <h4>飲んだビールを評価する</h4>
      </div>
      <div class="post-wrapper">
        <%= form_with model:@post, url: posts_create_path, method: 'POST', local: true do |form|%>
          <p>名称</p>
          <%=form.text_field:name%>
          <p>テキスト</p>
          <%=form.text_area:content%>
          <div class="reserve">
          <%=form.submit "投稿"%>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>